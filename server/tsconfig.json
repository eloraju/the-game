{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "include":["src/**/*.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "moduleResolution": "node",
    "module": "es2020",
    "target": "es2020",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
